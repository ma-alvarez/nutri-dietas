<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: 'container', method: :put}) do |f| %>
<div id="bg">
  <%= image_tag('nutri5.jpg') %>
</div>  
<div class="row vertical-offset-100">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
            <%= image_tag 'logo-nutri-salud-con-nombre.jpg', size: "390", class: "img-responsive center-block"%>
            <div class="panel-body">
                <form accept-charset="UTF-8" role="form">
                    <fieldset>
                        <h3>Cambiar contrase単a</h3>
                        <div class="form-group">
                          <%= devise_error_messages! %>
                          <%= f.hidden_field :reset_password_token %>
                          <%= f.label :password, "Nueva contrase単a"%>
                          <%= f.password_field :password, autofocus: true , autocomplete: "off", class: "form-control" %>
                        </div>
                        <div class="form-group">
                          <%= f.label :password_confirmation, "Confirmar nueva contrase単a" %><br />
                          <%= f.password_field :password_confirmation, autocomplete: "off" %>
                       </div>
                        <div class="form-group">
                        <%= f.submit "Cambiar contrase単a", class: 'btn btn-lg btn-primary btn-block' %>
                      </div>
                        <div class="form-group">
                            <%= render "devise/shared/links" %>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
<% end %>