<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'container'}) do |f| %>
<div id="bg">
  <%= image_tag('nutri5.jpg') %>
</div>  
<div class="row vertical-offset-100">
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
            <%= image_tag 'logo-nutri-salud-con-nombre.jpg', size: "390", class: "img-responsive center-block"%>
            <div class="panel-body">
                <form accept-charset="UTF-8" role="form">
                    <fieldset>
                    <%= devise_error_messages_login! %>
                        <div class="form-group">
                            <%= f.label :email%>
                            <%= f.email_field :email, autofocus: true , class: "form-control" %>
                        </div>
                        <div class="form-group">
                            <%= f.label :password%>
                            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                        </div>
                        <%= f.check_box :remember_me %> <%= f.label :remember_me %>
                        <%= f.submit "Iniciar sesiÃ³n", class: 'btn btn-lg btn-primary btn-block' %>
                        <div class="form-group">
                            <%= render "devise/shared/links" %>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
<% end %>